{
  "name": "edgeops-platform",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",

    "dev:api": "npm --prefix apps/api run dev",
    "dev:dashboard": "npm --prefix apps/dashboard run dev",

    "start:api": "npm --prefix apps/api run start",
    "start:dashboard": "npm --prefix apps/dashboard run start",

    "build": "npm run build:dashboard",
    "build:dashboard": "npm --prefix apps/dashboard run build",

    "install:all": "npm install --prefix apps/api && npm install --prefix apps/dashboard"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
